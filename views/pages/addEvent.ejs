<!doctype html>
<html>
<head>
  <% include ../partials/head.ejs %>
</head>
<body>
  <div class="navbar">
    <% include ../partials/top-bar.ejs %>
  </div>
  <div class="container">
    <div class="col-md-10 col-md-offset-1">
      <form action="/addevent" method="post" class="form-horizontal">
        <div class="form-group"><!--Event name-->
          <label for="eventName" class="col-md-3 control-label">Event Name</label>
          <div class="col-md-9">
            <input type="text" class="form-control" id="eventName" name="eventName" placeholder="Name of the event" />
          </div>
        </div>

        <div class="form-group"><!--Start Date-->
          <label for="startDate" class="col-md-3 control-label">Start Date</label>
          <div class="col-md-9">
            <input type="datetime-local" class="form-control" id="startDate" name="startDate" />
          </div>
        </div>

        <div class="form-group"><!--End Date-->
          <label for="endDate" class="col-md-3 control-label">End Date</label>
          <div class="col-md-9">
            <input type="datetime-local" class="form-control" id="endDate" name="endDate" />
          </div>
        </div>

        <div class="form-group"><!--Description-->
          <label for="description" class="col-md-3 control-label">Description</label>
          <div class="col-md-9">
            <textarea class="form-control" id="description" name="description" rows="5"></textarea>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-4 col-md-offset-8">
            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-plus-sign"></span> Add Event</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</body>
<script>
  document.getElementById('startDate').value = new Date();
  document.getElementById('endDate').value = new Date();
</script>
</html>
