<!doctype html>
<html>
<head>
  <% include ../partials/head.ejs %>
</head>
<body>
<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h1><span class="glyphicon glyphicon-user"></span> Signup</h1>

    <% if (message.length > 0) { %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% } %>

    <form action="/signup" method="post" class="form-horizontal">
      <div class="form-group"><!--Name-->
        <label for="name" class="col-md-2 control-label">Name</label>
        <div class="col-md-6">
          <input type="text" class="form-control" id="name" name="name" placeholder="Name" />
        </div>
      </div>

      <div class="form-group"><!--Surname-->
        <label for="surname" class="col-md-2 control-label">Surname</label>
        <div class="col-md-6">
          <input type="text" class="form-control" id="surname" name="surname" placeholder="Surname" />
        </div>
      </div>

      <div class="form-group"><!--Login-->
        <label for="login" class="col-md-2 control-label">Login</label>
        <div class="col-md-6">
          <input type="text" class="form-control" id="login" name="login" placeholder="Login" />
        </div>
      </div>

      <div class="form-group"><!--Password-->
        <label for="password" class="col-md-2 control-label">Password</label>
        <div class="col-md-6">
          <input type="password" class="form-control" id="password" name="password" placeholder="Password" />
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-8">
            <button type="submit" class="btn btn-success btn-block">Signup</button>
        </div>
      </div>
    </form>

    <p>Have an account? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

  </div>
</div>
</body>
</html>
